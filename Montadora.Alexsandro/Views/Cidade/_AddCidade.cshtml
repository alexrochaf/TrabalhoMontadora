@model  Montadora.Alexsandro.Models.Cidade
@{
    Layout = null;
}

<form class="form-inline" method="post" action="/Cidade/AddCidade">
    <div class="form-group">
        @Html.LabelFor(x => x.Nome, new {@class = "control-label"})
        @Html.TextBoxFor(x => x.Nome , new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Estado, new {@class = "control-label"})
        @Html.EnumDropDownListFor(x => x.Estado, new {@class = "form-control"})
    </div>
    <div class="form-group">
        <br/>
        <button id="submit" type="submit" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i></button>
    </div>
    
</form>
